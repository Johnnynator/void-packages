# Template file for 'kdiagram'
pkgname=kdiagram
version=3.0.1
revision=1
build_style=cmake
hostmakedepends="extra-cmake-modules qt6-tools qt6-base"
makedepends="qt6-base-devel qt6-svg-devel qt6-plugin-mysql qt6-plugin-sqlite"
short_desc="Powerful libraries for creating business diagrams"
maintainer="Orphaned <orphan@voidlinux.org>"
license="GPL-2.0-or-later"
homepage="http://www.kde.org/"
distfiles="${KDE_SITE}/${pkgname}/${version}/${pkgname}-${version}.tar.xz"
checksum=4659b0c2cd9db18143f5abd9c806091c3aab6abc1a956bbf82815ab3d3189c6d

kdiagram-devel_package() {
	short_desc+=" - development files"
	depends="${makedepends} ${sourcepkg}>=${version}_${revision}"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		#vmove usr/lib/qt5/mkspecs
		vmove "usr/lib/*.so"
	}
}
