# Template file for 'ktnef'
pkgname=ktnef
version=18.11.80
revision=1
build_style=cmake
hostmakedepends="extra-cmake-modules qt5-qmake qt5-host-tools python"
makedepends="kcalutils-devel kcontacts-devel"
short_desc="API for handling TNEF data"
maintainer="John <johnz@posteo.net>"
license="LGPL-2.1-or-later"
homepage="https://community.kde.org/KDE_PIM"
distfiles="${KDE_SITE/stable/unstable}/applications/${version}/src/ktnef-${version}.tar.xz"
checksum=4e33bcbf0081386268c0ff09364db86c5d003c3713a63900d8d2ca2e3a71e870

ktnef-devel_package() {
	depends="${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove usr/lib/qt5/mkspecs
		vmove "usr/lib/*.so"
	}
}
