# Template file for 'kdegraphics-mobipocket'
pkgname=kdegraphics-mobipocket
version=19.03.80
revision=1
build_style=cmake
configure_args="-DBUILD_TESTING=OFF"
hostmakedepends="extra-cmake-modules"
makedepends="kio-devel"
short_desc="Collection of plugins to handle mobipocket files"
maintainer="Denis Revin <denis.revin@gmail.com>"
license="GPL-2.0-or-later"
homepage="https://projects.kde.org/projects/kde/kdegraphics-mobipocket"
distfiles="${KDE_SITE/stable/unstable}/applications/${version}/src/${pkgname}-${version}.tar.xz"
checksum=717a25f33099cb1c7faab2563f286bec8bbd09fcc06d235194bf2e29d849ab8a

libqmobipocket_package() {
	short_desc+=" - runtime library"
	pkg_install() {
		vmove "usr/lib/*.so.*"
	}
}

libqmobipocket-devel_package() {
	short_desc+=" - development files"
	depends="libq${sourcepkg#kdegraphics-}>=${version}_${revision}"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove "usr/lib/*.so"
	}
}

if [ "$CROSS_BUILD" ]; then
	hostmakedepends+=" qt5-host-tools qt5-qmake"
fi
