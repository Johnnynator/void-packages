# Template file for 'kdepim-apps-libs'
pkgname=kdepim-apps-libs
version=19.11.90
revision=1
build_style=cmake
hostmakedepends="extra-cmake-modules qt5-qmake qt5-host-tools python
 kcoreaddons kconfig"
makedepends="grantlee5-devel kcontacts-devel akonadi-contacts-devel libkleo-devel
 grantleetheme-devel libkdepim-devel pimcommon-devel"
short_desc="KDE PIM mail related libraries"
maintainer="John <johnz@posteo.net>"
license="GPL-2.0-or-later, LGPL-2.1-or-later"
homepage="https://community.kde.org/KDE_PIM"
distfiles="${KDE_SITE/stable/unstable}/applications/${version}/src/kdepim-apps-libs-${version}.tar.xz"
checksum=c6657b371d2e53632234d5401b7722d3439f00f6bfddb6f313f406c11ea4c93c

kdepim-apps-libs-devel_package() {
	depends="${sourcepkg}>=${version}_${revision} ${makedepends}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove usr/lib/qt5/mkspecs
		vmove "usr/lib/*.so"
	}
}
