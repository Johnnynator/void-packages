# Template file for 'grantleetheme'
pkgname=grantleetheme
version=24.02.0
revision=1
build_style=cmake
configure_args="KDE_INSTALL_USE_QT_SYS_PATHS=TRUE"
hostmakedepends="extra-cmake-modules qt6-base qt6-tools python3
 gettext kf6-kcoreaddons"
makedepends="grantlee5-devel kf6-ki18n-devel kf6-ktexttemplate-devel
 kf6-knewstuff-devel kf6-kguiaddons-devel kf6-kiconthemes-devel
 kf6-kxmlgui-devel"
short_desc="Library for Grantlee theming support"
maintainer="John <me@johnnynator.dev>"
license="GPL-2.0-or-later, LGPL-2.1-or-later"
homepage="https://community.kde.org/KDE_PIM"
distfiles="${KDE_SITE}/release-service/${version}/src/grantleetheme-${version}.tar.xz"
checksum=fb7fab1ced8fe9153ed4ac6e8a135ba1335f3b63430f7e5bb60288473f9ebc68

grantleetheme-devel_package() {
	depends="${sourcepkg}>=${version}_${revision} ${makedpends}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove "usr/lib/*.so"
	}
}
