# Template file for 'grantleetheme'
pkgname=grantleetheme
version=19.11.90
revision=1
build_style=cmake
configure_args="KDE_INSTALL_USE_QT_SYS_PATHS=TRUE"
hostmakedepends="extra-cmake-modules qt5-qmake qt5-host-tools python
 kcoreaddons"
makedepends="grantlee5-devel ki18n-devel kiconthemes-devel knewstuff-devel"
short_desc="Library for Grantlee theming support"
maintainer="John <johnz@posteo.net>"
license="GPL-2.0-or-later, LGPL-2.1-or-later"
homepage="https://community.kde.org/KDE_PIM"
distfiles="${KDE_SITE/stable/unstable}/applications/${version}/src/grantleetheme-${version}.tar.xz"
checksum=c99ca25c5d9fb5239a83a675b8c81228a7224b67a1ad9ebeec57bdd0121ea36f

grantleetheme-devel_package() {
	depends="${sourcepkg}>=${version}_${revision} ${makedpends}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove usr/lib/qt5/mkspecs
		vmove "usr/lib/*.so"
	}
}
