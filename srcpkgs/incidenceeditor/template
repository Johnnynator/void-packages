# Template file for 'incidenceeditor'
pkgname=incidenceeditor
version=24.02.0
revision=1
build_style=cmake
hostmakedepends="extra-cmake-modules qt6-base qt6-tools kf6-kcoreaddons kf6-kconfig
 gettext"
makedepends="calendarsupport-devel eventviews-devel kdiagram-devel"
short_desc="KDE PIM incidence editor"
maintainer="Orphaned <orphan@voidlinux.org>"
license="GPL-2.0-or-later"
homepage="https://community.kde.org/KDE_PIM"
distfiles="${KDE_SITE}/release-service/${version}/src/${pkgname}-${version}.tar.xz"
checksum=9b401a81150569c621e763a1c5b7ea07d243e4a9445d2e26dcbe90a14693e398

do_check() {
	# failing tests are disabled
	cd build
	ctest -E ".*sqlite.*test"
}

incidenceeditor-devel_package() {
	short_desc+=" - development"
	depends="${makedepends} ${sourcepkg}>=${version}_${revision}"
	pkg_install() {
		vmove usr/include
		#vmove usr/lib/qt5/mkspecs
		vmove usr/lib/cmake
		vmove "usr/lib/*.so"
	}
}
