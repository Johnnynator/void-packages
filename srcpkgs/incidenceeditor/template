# Template file for 'incidenceeditor'
pkgname=incidenceeditor
version=18.11.80
revision=1
build_style=cmake
hostmakedepends="extra-cmake-modules qt5-qmake qt5-host-tools kconfig"
makedepends="calendarsupport-devel eventviews-devel kdiagram-devel"
short_desc="KDE PIM incidence editor"
maintainer="Helmut Pozimski <helmut@pozimski.eu>"
license="GPL-2.0-or-later"
homepage="https://community.kde.org/KDE_PIM"
distfiles="${KDE_SITE/stable/unstable}/applications/${version}/src/${pkgname}-${version}.tar.xz"
checksum=617daa2401c7042e0e00401a90591c530907ff0a898e38e15c0ae71c9cfdb0e9

incidenceeditor-devel_package() {
	short_desc+=" - development"
	depends="${makedepends} ${sourcepkg}>=${version}_${revision}"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/qt5/mkspecs
		vmove usr/lib/cmake
		vmove usr/lib/*.so
	}
}

