# libupnp uses large file support, so users must do that, too
CXXFLAGS="-D_FILE_OFFSET_BITS=64"

system_accounts="gerbera"
make_dirs="/var/lib/gerbera 0750 gerbera gerbera"

post_install() {
	vsv gerbera
}
