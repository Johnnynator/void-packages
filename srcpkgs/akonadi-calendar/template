# Template file for 'akonadi-calendar'
pkgname=akonadi-calendar
version=18.11.80
revision=1
build_style=cmake
hostmakedepends="extra-cmake-modules python3 qt5-qmake qt5-host-tools kconfig"
makedepends="akonadi-contacts-devel kmailtransport-devel kcalutils-devel"
short_desc="Akonadi calendar integration"
maintainer="John <johnz@posteo.net>"
license="LGPL-2.1-or-later"
homepage="https://community.kde.org/KDE_PIM"
distfiles="${KDE_SITE/stable/unstable}/applications/${version}/src/akonadi-calendar-${version}.tar.xz"
checksum=fbdbc235f80d558b850c2e4ecbc6ac67e807b2f4eeae4867d619deb9a608bce6

akonadi-calendar-devel_package() {
	depends="${sourcepkg}>=${version}_${revision} ${makedepends}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/qt5/mkspecs
		vmove usr/lib/cmake
		vmove "usr/lib/*.so"
	}
}
