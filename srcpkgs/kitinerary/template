makedepends="kf6-kcalendarcore-devel kf6-kcontacts-devel kf6-kdeclarative-devel kf6-karchive-devel kmime-devel
 kpkpass-devel libphonenumber-devel poppler-devel libxml2-devel qt6-base-devel
 zxing-cpp-devel"
