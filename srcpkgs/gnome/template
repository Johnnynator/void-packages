 gnome-tweaks>=$version gtksourceview>=3.24.4 gvfs>=1.40.0 mousetweaks>=3.12.0
 network-manager-applet>=1.8.2 gnome-screenshot>=$version elogind gnome-calendar>=$version
 gnome-clocks>=$version"
