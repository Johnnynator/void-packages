# Template file for 'kleopatra'
pkgname=kleopatra
version=24.02.0
revision=1
build_style=cmake
hostmakedepends="extra-cmake-modules qt6-base qt6-tools gettext"
makedepends="kf6-kcmutils-devel AppStream kf6-kitemmodels-devel qgpgme-qt6-devel
 gpgmeqt-devel libkleo-devel kmime-devel kf6-kstatusnotifieritem-devel
 kf6-ktextwidgets-devel akonadi-mime-devel mimetreeparser-devel kmbox-devel"
depends="gnupg>=2"
checkdepends="dbus gnupg"
short_desc="Certificate Manager and Unified Crypto GUI"
maintainer="Orphaned <orphan@voidlinux.org>"
license="GPL-2.0-or-later, LGPL-2.1-or-later, GFDL-1.2-or-later"
homepage="https://www.kde.org/applications/utilities/kleopatra/"
distfiles="${KDE_SITE}/release-service/${version}/src/${pkgname}-${version}.tar.xz"
checksum=b91486f40084d886824339301df038df84632a3d81b9254d87734240dcd99838

do_check() {
	dbus-run-session ninja -C build test
}

post_install() {
