# Template file for 'kross5'
pkgname=kross5
version=5.115.0
revision=1
build_style=cmake
configure_args="
 -DMEINPROC5_EXECUTABLE=/usr/bin/meinproc5"
hostmakedepends="kcoreaddons5 extra-cmake-modules gettext
 qt5-host-tools qt5-qmake kdoctools5-devel"
makedepends="qt5-tools-devel kdoctools5-devel kparts5-devel"
short_desc="KDE scripting bridge"
maintainer="John <me@johnnynator.dev>"
license="LGPL-2.1-or-later"
homepage="https://invent.kde.org/frameworks/kross"
distfiles="${KDE_SITE}/frameworks/${version%.*}/portingAids/${pkgname%5}-${version}.tar.xz"
checksum=e26f27e8421e31ddd3eaeadf6ac2257dc1ad47257faa912c489259dad7240b6f

kross5-devel_package() {
	short_desc+=" - development"
	depends="${makedepends} ${sourcepkg}>=${version}_${revision}"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/qt5/mkspecs
		vmove usr/lib/cmake
		vmove "usr/lib/*.so"
	}
}
