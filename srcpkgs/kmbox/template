# Template file for 'kmbox'
pkgname=kmbox
version=24.02.0
revision=1
build_style=cmake
hostmakedepends="extra-cmake-modules qt6-base qt6-tools python3
 gettext"
makedepends="kmime-devel qt6-base-devel kf6-kcodecs-devel"
short_desc="Library for accessing mail storages in MBox format"
maintainer="John <me@johnnynator.dev>"
license="LGPL-2.1-or-later"
homepage="https://community.kde.org/KDE_PIM"
distfiles="${KDE_SITE}/release-service/${version}/src/kmbox-${version}.tar.xz"
checksum=6ea8ea43483489d4467f528163101af4fb19ea33664c72857b2abfe8a468f403

kmbox-devel_package() {
	depends="${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove "usr/lib/*.so"
	}
}
