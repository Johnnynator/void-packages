	configure_args+=" -DDESKTOPTOJSON_EXECUTABLE=/usr/bin/desktoptojson"
fi

konsole5_package() {
	build_style=meta
	short_desc+=" (transitional dummy package)"
	depends="konsole>=${version}_${revision}"
}
