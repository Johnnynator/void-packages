# Template file for 'dde-dock'
pkgname=dde-dock
version=4.10.1
revision=1
build_style=cmake
hostmakedepends="pkg-config qt5-host-tools qt5-qmake"
makedepends="dde-qt-dbus-factory-devel dtkwidget-devel qt5-devel
 qt5-x11extras-devel qt5-svg-devel xcb-util-wm-devel gsettings-qt-devel
 xcb-util-image-devel libXtst-devel dde-network-utils-devel
 libdbusmenu-qt5-devel"
depends="deepin-desktop-schemas deepin-menu dde-daemon"
short_desc="The dock of Deepin Desktop Environment"
maintainer="John <johnz@posteo.net>"
license="GPL-3.0-or-later"
#changelog="https://github.com/linuxdeepin/dde-dock/blob/master/CHANGELOG.md"
homepage="https://github.com/linuxdeepin/dde-dock"
distfiles="https://github.com/linuxdeepin/dde-dock/archive/${version}.tar.gz"
checksum=d57fbb1c57ac6e4f3f3ee8ae1e48ed196f0f01c3c3edd9dfa9b094fd3ce2e8e2

if [ "$CROSS_BUILD" ]; then
	hostmakedepends+=" dtkwidget-devel"
fi

dde-dock-devel_package() {
	short_desc+=" - development files"
	depends="${sourcepkg}>=${version}_${revision}"
	pkg_install() {
		vmove usr/include
	}
}
