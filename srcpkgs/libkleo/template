# Template file for 'libkleo'
pkgname=libkleo
version=19.11.90
revision=1
build_style=cmake
hostmakedepends="extra-cmake-modules python qt5-qmake qt5-host-tools
 kcoreaddons"
makedepends="kitemmodels-devel kpimtextedit-devel gpgmeqt-devel gpgmepp-devel"
short_desc="KDE PIM cryptographic library"
maintainer="John <johnz@posteo.net>"
license="GPL-2.0-or-later, LGPL-2.1-or-later"
homepage="https://community.kde.org/KDE_PIM"
distfiles="${KDE_SITE/stable/unstable}/applications/${version}/src/libkleo-${version}.tar.xz"
checksum=a1fbd125c025ba6b319d692d934fc1ecb414982192e6042ee5fa3c7bd9030f0f

libkleo-devel_package() {
	depends="${sourcepkg}>=${version}_${revision} ${makedepends}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/qt5/mkspecs
		vmove usr/lib/cmake
		vmove "usr/lib/*.so"
	}
}
