# Template file for 'libkleo'
pkgname=libkleo
version=24.02.0
revision=1
build_style=cmake
hostmakedepends="extra-cmake-modules python3 qt6-base qt6-tools
 gettext kf6-kcoreaddons kf6-kconfig"
makedepends="kf6-kitemmodels-devel kpimtextedit-devel qgpgme-qt6-devel
 boost-devel gpgmepp-devel gpgmeqt-devel"
short_desc="KDE PIM cryptographic library"
maintainer="John <me@johnnynator.dev>"
license="GPL-2.0-or-later, LGPL-2.1-or-later"
homepage="https://community.kde.org/KDE_PIM"
distfiles="${KDE_SITE}/release-service/${version}/src/libkleo-${version}.tar.xz"
checksum=ade428daca544798314a3a5b577efe8417c6d2182f74e427f3d7c79c3ca1b96c

do_check() {
	cd build
	ctest -E 'newkeyapprovaldialogtest'
}

libkleo-devel_package() {
	depends="${sourcepkg}>=${version}_${revision} ${makedepends}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove "usr/lib/*.so"
	}
}
