# Template file for 'openexr'
pkgname=openexr
version=3.1.5
revision=1
build_style=cmake
build_helper="qemu"
hostmakedepends="pkg-config"
makedepends="imath-devel zlib-devel"
short_desc="High dynamic-range (HDR) image file format"
maintainer="Orphaned <orphan@voidlinux.org>"
license="BSD-3-Clause"
homepage="https://www.openexr.com/"
distfiles="https://github.com/AcademySoftwareFoundation/openexr/archive/v${version}.tar.gz"
checksum=93925805c1fc4f8162b35f0ae109c4a75344e6decae5a240afdfce25f8a433ec

post_install() {
	local d f

	vlicense LICENSE.md
}

ilmbase_package() {
	pkg_install() {
		vmove "usr/lib/libIex-3_1.so.*"
		vmove "usr/lib/libIlmThread-3_1.so.*"
	}
}

libopenexr_package() {
	short_desc+=" - runtime libraries"
	pkg_install() {
		vmove "usr/lib/*.so.*"
	}
}
libopenexr-devel_package() {
	short_desc+=" - development files"
	depends="${makedepends} ilmbase>=${version}_${revision} libopenexr>=${version}_${revision}"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove usr/lib/pkgconfig
		vmove "usr/lib/*.so"
		vmove usr/share
	}
}
