# Template file for 'kalarmcal'
pkgname=kalarmcal
version=19.11.90
revision=1
build_style=cmake
hostmakedepends="extra-cmake-modules qt5-qmake qt5-host-tools python3
 kdoctools kdesignerplugin"
makedepends="kidentitymanagement-devel kholidays-devel kcalendarcore-devel akonadi5-devel
 kdelibs4support-devel kcalutils-devel"
short_desc="KAlarm client library"
maintainer="John <johnz@posteo.net>"
license="LGPL-2.1-or-later"
homepage="https://community.kde.org/KDE_PIM"
distfiles="${KDE_SITE/stable/unstable}/applications/${version}/src/${pkgname}-${version}.tar.xz"
checksum=7ad4105f46d381e21873ea614b2cd9575ba8a75e14ba9e11bd228e55a4587241

kalarmcal-devel_package() {
	depends="${sourcepkg}>=${version}_${revision} ${makedepends}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove usr/lib/qt5/mkspecs
		vmove "usr/lib/*.so"
	}
}
