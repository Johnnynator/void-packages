# Template file for 'imath'
pkgname=imath
version=3.1.5
revision=1
wrksrc="Imath-$version"
build_style=cmake
makedepends="boost-devel"
short_desc="C++ and python library of 2D and 3D vector, matrix, and math operations for computer graphics"
maintainer="John <me@johnnynator.dev>"
license="GPL-3.0-or-later"
homepage="https://www.openexr.com/"
#changelog=""
distfiles="https://github.com/AcademySoftwareFoundation/Imath/archive/refs/tags/v$version.tar.gz"
checksum=1e9c7c94797cf7b7e61908aed1f80a331088cc7d8873318f70376e4aed5f25fb

imath-devel_package() {
	depends="${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove usr/lib/cmake
		vmove "usr/lib/*.so"
	}
}
