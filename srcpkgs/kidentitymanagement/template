# Template file for 'kidentitymanagement'
pkgname=kidentitymanagement
version=24.02.0
revision=1
build_style=cmake
hostmakedepends="extra-cmake-modules qt6-base qt6-tools qt6-declarative-host-tools
 pkg-config gettext"
makedepends="qt6-base-devel kf6-kcoreaddons-devel kf6-kcompletion-devel
 kf6-ktextwidgets-devel kf6-kxmlgui-devel kf6-kio-devel kirigami-addons-devel
 kpimtextedit-devel"
short_desc="KDE PIM libraries"
maintainer="John <me@johnnynator.dev>"
license="LGPL-2.1-or-later"
homepage="https://invent.kde.org/pim/kidentitymanagement"
distfiles="${KDE_SITE}/release-service/${version}/src/${pkgname}-${version}.tar.xz"
checksum=fdd4c5928f14122c33b4f97cf7587a07689e6d168b3a56a31b7fa60d7149048c

kidentitymanagement-devel_package() {
	short_desc+=" - development files"
	depends="${makedepends} ${sourcepkg}>=${version}_${revision}"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove "usr/lib/*.so"
	}
}
