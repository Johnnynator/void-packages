# Template file for 'akonadi-contacts'
pkgname=akonadi-contacts
version=24.02.0
revision=1
build_style=cmake
hostmakedepends="extra-cmake-modules gettext kf6-kcoreaddons kf6-kcmutils"
makedepends="kf6-kio-devel kf6-kcontacts-devel kf6-prison-devel kf6-ktextwidgets-devel kf6-ktexttemplate-devel
 libkleo-devel grantlee5-devel grantleetheme-devel kmime-devel akonadi-mime-devel"
short_desc="Libraries and daemons to implement Contact Management in Akonadi"
maintainer="John <me@johnnynator.dev>"
license="LGPL-2.0-or-later, GPL-2.0-or-later"
homepage="https://community.kde.org/KDE_PIM/Akonadi"
distfiles="${KDE_SITE}/release-service/${version}/src/akonadi-contacts-${version}.tar.xz"
checksum=cafd9c2dc48e88dc9d07c86892ea54a33ee19bb231b92a76cfaf7ba7bb2c2e04

if [ "$CROSS_BUILD" ];then
	hostmakedepends+=" qt6-base qt6-tools python3 kf6-kconfig"
fi

akonadi-contacts-devel_package() {
	depends="${sourcepkg}>=${version}_${revision} ${makedepends}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove "usr/lib/*.so"
	}
}
