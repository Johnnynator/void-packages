# Template file for 'kaddressbook'
pkgname=kaddressbook
version=24.02.0
revision=1
build_style=cmake
hostmakedepends="extra-cmake-modules qt6-base qt6-tools gettext"
makedepends="akonadi-devel libkleo-devel kf6-kcmutils-devel kontactinterface-devel
 pimcommon-devel"
short_desc="KDE contact manager"
maintainer="Orphaned <orphan@voidlinux.org>"
license="GPL-2.0-or-later"
homepage="https://kde.org/applications/en/office/org.kde.kaddressbook"
distfiles="${KDE_SITE}/release-service/${version}/src/${pkgname}-${version}.tar.xz"
checksum=64916117bcee9f54923abbceafc733db00a52c38e39e1bc91e2dc86eaabccaf5

kaddressbook-devel_package() {
	depends="${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove "usr/lib/*.so"
	}
}
