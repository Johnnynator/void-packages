# Template file for 'kldap'
pkgname=kldap
version=19.03.80
revision=1
build_style=cmake
hostmakedepends="extra-cmake-modules qt5-qmake qt5-host-tools python
 kdoctools"
makedepends="kio-devel"
short_desc="LDAP access API for KDE"
maintainer="John <johnz@posteo.net>"
license="LGPL-2.1-or-later"
homepage="https://community.kde.org/KDE_PIM"
distfiles="${KDE_SITE/stable/unstable}/applications/${version}/src/kldap-${version}.tar.xz"
checksum=7362fcd22f687933059e7d179478befbfc61621c3596db4070ceef9623bcd7bd

kldap-devel_package() {
	depends="${sourcepkg}>=${version}_${revision} ${makedepends}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove usr/lib/qt5/mkspecs
		vmove "usr/lib/*.so"
	}
}
