# Template file for 'kldap'
pkgname=kldap
version=24.02.0
revision=1
build_style=cmake
hostmakedepends="extra-cmake-modules qt6-base qt6-tools python3
 gettext kf6-kcoreaddons kf6-kdoctools"
makedepends="kf6-kio-devel qtkeychain-qt6-devel"
short_desc="LDAP access API for KDE"
maintainer="John <me@johnnynator.dev>"
license="LGPL-2.1-or-later"
homepage="https://community.kde.org/KDE_PIM"
distfiles="${KDE_SITE}/release-service/${version}/src/kldap-${version}.tar.xz"
checksum=013d9cde948ef38ad9451013e454c39db703fc7c37c3a91670a9a9e645fc551a

kldap-devel_package() {
	depends="${sourcepkg}>=${version}_${revision} ${makedepends}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove "usr/lib/*.so"
	}
}
