# Template file for 'calendarsupport'
pkgname=calendarsupport
version=19.07.80
revision=1
build_style=cmake
hostmakedepends="extra-cmake-modules kconfig python3 qt5-host-tools qt5-qmake
 kcoreaddons qt5-tools"
makedepends="kholidays-devel akonadi-calendar-devel kdepim-apps-libs-devel"
short_desc="Calendar support library"
maintainer="John <johnz@posteo.net>"
license="GPL-2.0-or-later, LGPL-2.1-or-later"
homepage="https://community.kde.org/KDE_PIM"
distfiles="${KDE_SITE/stable/unstable}/applications/${version}/src/calendarsupport-${version}.tar.xz"
checksum=ce608e6604069b8da1496fa4fe3883874635023f6a59c27b9c8c701878585bd2

calendarsupport-devel_package() {
	depends="${sourcepkg}>=${version}_${revision} ${makedepends}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/qt5/mkspecs
		vmove usr/lib/cmake
		vmove "usr/lib/*.so"
	}
}
