# Template file for 'kauth5'
pkgname=kauth5
version=5.115.0
revision=1
build_style=cmake
hostmakedepends="kcoreaddons5 extra-cmake-modules pkg-config kcoreaddons5
 qt5-host-tools qt5-qmake qt5-tools-devel polkit-qt5-devel"
makedepends="kcoreaddons5-devel polkit-qt5-devel"
short_desc="KDE Execute actions as privileged user"
maintainer="John <me@johnnynator.dev>"
license="LGPL-2.1-or-later"
homepage="https://invent.kde.org/frameworks/kauth"
distfiles="${KDE_SITE}/frameworks/${version%.*}/${pkgname%5}-${version}.tar.xz"
checksum=53a9f56befc66a467ea1764af55dfaac0d79a5d5b55d2abe6e399236f9f35aa2

do_check() {
	cd build
	# KAuthHelperTest just hangs
	ctest -E 'KAuthHelperTest'
}

kauth5-devel_package() {
	short_desc+=" - development"
	depends="${makedepends} ${sourcepkg}>=${version}_${revision}"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/qt5/mkspecs
		vmove usr/lib/cmake
		vmove "usr/lib/*.so"
	}
}
