# Template file for 'deepin-go-lib'
pkgname=deepin-go-lib
version=1.2.11
revision=1
wrksrc="go-lib-${version}"
depends="mobile-broadband-provider-info libX11-devel gdk-pixbuf-devel
 pulseaudio-devel"
short_desc="Deepin GoLang Library"
maintainer="John <johnz@posteo.net>"
license="GPL-3.0-or-later"
#changelog="https://github.com/linuxdeepin/go-lib/blob/${version}/CHANGELOG.md"
homepage="https://github.com/linuxdeepin/go-lib"
distfiles="https://github.com/linuxdeepin/go-lib/archive/${version}.tar.gz"
checksum=29df80957dbc590519cd6cd25c889b629e1b48dc99ad18d51cb5c3c9e7171ddc

do_install() {
	vmkdir usr/share/gocode/src/pkg.deepin.io
	vcopy ${wrksrc} usr/share/gocode/src/pkg.deepin.io/lib
	rm -r ${DESTDIR}/usr/share/gocode/src/pkg.deepin.io/lib/debian
}
