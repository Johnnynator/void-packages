# Template file for 'kmime'
pkgname=kmime
version=19.11.90
revision=1
build_style=cmake
hostmakedepends="extra-cmake-modules python3"
makedepends="kcodecs-devel ki18n-devel"
short_desc="Library for handling mail messages and newsgroup articles"
maintainer="John <johnz@posteo.net>"
license="LGPL-2.1-or-later"
homepage="https://community.kde.org/KDE_PIM"
distfiles="${KDE_SITE/stable/unstable}/applications/${version}/src/kmime-${version}.tar.xz"
checksum=9fc246beea12cb22ff8ededc7410f500fc84288da48ffe456cd45acd7f2efcd6

if [ "CROSS_BUILD" ];then
	hostmakedepends+=" qt5-qmake qt5-host-tools"
fi

kmime-devel_package() {
	depends="${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove usr/lib/qt5/mkspecs
		vmove "usr/lib/*.so"
	}
}
