# Template file for 'libkipi5'
pkgname=libkipi5
version=19.11.90
revision=1
wrksrc="libkipi-${version}"
build_style=cmake
configure_args="-DBUILD_TESTING=OFF"
hostmakedepends="extra-cmake-modules kdoctools qt5-host-tools qt5-qmake
 kcoreaddons"
makedepends="kxmlgui-devel"
short_desc="Interface to use kipi-plugins from a KDE application"
maintainer="John <johnz@posteo.net>"
license="GPL-2.0-or-later"
homepage="https://projects.kde.org/projects/kde/kdegraphics/libs/libkipi"
distfiles="${KDE_SITE/stable/unstable}/applications/${version}/src/libkipi-${version}.tar.xz"
checksum=d0b40abe876f61c1e3a1fae4fbba43649fb924a3dd528b59976e2e988215376e
conflicts="libkipi"

libkipi5-devel_package() {
	short_desc+=" - development files"
	depends="${sourcepkg}-${version}_${revision}"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove "usr/lib/*.so"
	}
}
