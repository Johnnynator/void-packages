# Template file for 'libkipi5'
pkgname=libkipi5
version=18.11.80
revision=1
wrksrc="${pkgname%5}-${version}"
build_style=cmake
configure_args="-DBUILD_TESTING=OFF"
hostmakedepends="extra-cmake-modules kdoctools qt5-host-tools qt5-qmake"
makedepends="kxmlgui-devel"
conflicts="libkipi"
short_desc="An interface to use kipi-plugins from a KDE application"
maintainer="Denis Revin <denis.revin@gmail.com>"
license="GPL-2.0-or-later"
homepage="https://projects.kde.org/projects/kde/kdegraphics/libs/libkipi"
distfiles="${KDE_SITE/stable/unstable}/applications/${version}/src/${pkgname%5}-${version}.tar.xz"
checksum=3a0a5ea27b1f589323302c1845bfe03d6247555f9ff8ab34eaee8a669691ad83

libkipi5-devel_package() {
	short_desc+=" - development files"
	depends="${sourcepkg}-${version}_${revision}"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove "usr/lib/*.so"
	}
}
