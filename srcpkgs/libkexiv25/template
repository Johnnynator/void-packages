# Template file for 'libkexiv25'
pkgname=libkexiv25
version=18.11.80
revision=1
wrksrc="${pkgname%5}-${version}"
build_style=cmake
configure_args="-DBUILD_TESTING=OFF"
hostmakedepends="extra-cmake-modules pkg-config"
makedepends="qt5-devel exiv2-devel"
short_desc="A library to manipulate pictures metadata"
maintainer="Denis Revin <denis.revin@gmail.com>"
license="GPL-2.0-or-later"
homepage="https://projects.kde.org/projects/kde/kdegraphics/libs/libkexiv2"
distfiles="${KDE_SITE/stable/unstable}/applications/${version}/src/${pkgname%5}-${version}.tar.xz"
checksum=ffc3f318fe9e64e372bd3fd57f88cdb371b21696765c9f1194760299a998a513

libkexiv25-devel_package() {
	short_desc+=" - development files"
	depends="${sourcepkg}-${version}_${revision}"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove "usr/lib/*.so"
	}
}

if [ "$CROSS_BUILD" ]; then
	hostmakedepends+=" qt5-host-tools qt5-qmake"
fi
