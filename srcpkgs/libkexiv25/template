# Template file for 'libkexiv25'
pkgname=libkexiv25
version=19.07.80
revision=1
wrksrc="libkexiv2-${version}"
build_style=cmake
configure_args="-DBUILD_TESTING=OFF"
hostmakedepends="extra-cmake-modules pkg-config qt5-host-tools qt5-qmake"
makedepends="qt5-devel exiv2-devel"
short_desc="Library to manipulate pictures metadata"
maintainer="Denis Revin <denis.revin@gmail.com>"
license="GPL-2.0-or-later"
homepage="https://projects.kde.org/projects/kde/kdegraphics/libs/libkexiv2"
distfiles="${KDE_SITE/stable/unstable}/applications/${version}/src/libkexiv2-${version}.tar.xz"
checksum=2624ca6cf4a17b0186799b23cb269be003c5f7e89af14c8897d0faecd19835bf

libkexiv25-devel_package() {
	short_desc+=" - development files"
	depends="${sourcepkg}-${version}_${revision}"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove "usr/lib/*.so"
	}
}
